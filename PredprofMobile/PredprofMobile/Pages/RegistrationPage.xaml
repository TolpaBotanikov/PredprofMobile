<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PredprofMobile.RegistrationPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Регистрация пользователя" FontSize="Title" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" Margin="50" HorizontalTextAlignment="Center"/>
            <StackLayout VerticalOptions="CenterAndExpand">
                <Entry Placeholder="Логин"/>
                <Entry Placeholder="Пароль" IsPassword="True"/>
                <Button Text="Зарегистрировать"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>